{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".(e2e-spec|spec).(ts)$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^src/(.*)$": "<rootDir>/src/$1" 
  },
  "collectCoverageFrom": ["**/*.ts"],
  "testEnvironment": "node"
}
